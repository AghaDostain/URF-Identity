@using Identity.Resources
@model Identity.UI.ViewModels.Account.SendCodeViewModel

@{
    ViewBag.Title = AccountResources.SendCode_Title;
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("SendCode", "Account",
    new {ReturnUrl = Model.ReturnUrl}, FormMethod.Post,
    new {@class = "form-horizontal", role = "form"}))
{
    @Html.AntiForgeryToken()

    @Html.Hidden("rememberMe", @Model.RememberMe)

    <h4>@AccountResources.SendCode_SubTitle</h4>

    <hr/>

    <div class="form-group">
        @Html.LabelFor(m => m.SelectedProvider, new {@class = "col-md-3 control-label"})
        <div class="col-md-3">
            @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers, new {@class = "form-control"})
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-3 col-md-9">
            <input type="submit" value="@AccountResources.Send" class="btn btn-default"/>
        </div>
    </div>
}