@using Identity.Resources
@model Identity.UI.ViewModels.Manage.SetPasswordViewModel

@{
    ViewBag.Title = AccountResources.SetPassword_Title;
}

<h2>@ViewBag.Title</h2>

<p class="text-info">
    @Html.Raw(AccountResources.SetPassword_Message)
</p>

@using (Html.BeginForm("SetPassword", "Manage", FormMethod.Post,
    new {@class = "form-horizontal", role = "form"}))
{
    @Html.AntiForgeryToken()

    <h4>@AccountResources.SetPassword_SubTitle</h4>

    <hr/>

    @Html.ValidationSummary("", new {@class = "text-danger"})

    <div class="form-group">
        @Html.LabelFor(m => m.NewPassword, new {@class = "col-md-2 control-label"})
        <div class="col-md-10">
            @Html.PasswordFor(m => m.NewPassword, new {@class = "form-control", autofocus = true})
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new {@class = "col-md-2 control-label"})
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new {@class = "form-control"})
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="@AccountResources.SetPassword" class="btn btn-default"/>
        </div>
    </div>
}