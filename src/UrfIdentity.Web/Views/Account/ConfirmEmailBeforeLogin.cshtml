@using Identity.Resources
@model Identity.UI.ViewModels.Account.ResendEmailConfirmationViewModel

@{
    ViewBag.Title = AccountResources.ConfirmEmailBeforeLogin_Title;
}

<h2>@ViewBag.Title</h2>

<div>
    @Html.Raw(AccountResources.ConfirmEmailBeforeLogin_Message)
</div>


@using (Html.BeginForm("ResendEmailConfirmation", "Account", FormMethod.Post,
    new {@class = "form-horizontal", role = "form"}))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.Email)

    <div class="form-group">
        <div class="col-md-12">
            <button class="btn btn-default" value="submit">
                @AccountResources.ResendEmailConfirmation
            </button>
        </div>
    </div>
}